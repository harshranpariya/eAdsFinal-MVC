@model eAdsFInalMVC.Models.ProductOwner

@{
    ViewBag.Title = "Index";
    var username = "";
 }


<!--================================
        START SEARCH AREA
    =================================-->
<section class="search-wrapper">
    <div class="search-area2 bgimage">
        <div class="bg_image_holder">
            <img src="~/Content/images/search.jpg" alt="">
        </div>
        <div class="container content_above">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="search">

                        <div class="breadcrumb">
                            <ul>
                                <li>
                                    <a href="index.aspx">Home</a>
                                </li>
                                <li class="active">
                                    <a href="products.aspx">All Products</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end /.row -->
        </div>
        <!-- end /.container -->
    </div>
    <!-- end /.search-area2 -->
</section>
<!--================================
    END SEARCH AREA
=================================-->
<!--================================
    START PRODUCTS AREA
=================================-->
<section class="products section--padding">
    <!-- start container -->
    <div class="container">




        <div class="row">
            @foreach (var product in Model.lstProduct)
            {
               



                <div class="col-lg-4 col-md-6">
                    <div class="product product--card">

                        <div class="product__thumbnail">
                            <img src="~/Content/images/p1.jpg" alt="Product Image">
                            <div class="prod_btn">
                                <a href="/Product/SingleProduct/@product.pId" class="transparent btn--sm btn--round">More Info</a>
                            </div>
                        </div>

                        <div class="product-desc">
                            <a href="/Product/SingleProduct/@product.pId" class="product_title">
                                <h4>@product.pName</h4>
                            </a>
                            <ul class="titlebtm">
                                <li>
                                    <img class="auth-img" src="~/Content/images/auth.jpg" alt="author image">
                                    <p>
                                        @{ 
                                            foreach (var user in Model.lstOwner)
                                            {
                                                if (product.ownerid == user.Id)
                                                {
                                                    username = user.cName;
                                                }

                                            }

                                        }
                                        @username
                                        
                                    </p>
                                </li>
                                <br />
                                <br />
                                <li class="product_cat">
                                    
                                    Category :
                                    <span class="lnr lnr-book"></span>@product.pCategory

                                </li>
                            </ul>

                            <p>@product.pDescription </p>
                        </div>

                        <div class="product-purchase">
                            <div class="price_love">
                                <span>@product.pPrice    CAD $</span>
                                <p>

                            </div>

                        </div>
                    </div>
                </div>

            }


        </div>
        <!-- end /.row -->


    </div>
    <!-- end /.container -->
</section>
<!--================================
    END PRODUCTS AREA
=================================-->
